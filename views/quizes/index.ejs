<div id="quizes">
  <form action="/quizes" method="get">
    <p>
      Buscar:
      <input type="search" name="search" placeholder="Introduzca búsqueda" />
      <button type="submit">Seleccionar</button>
    </p>
  </form>
  <table>
    <% var i; for(i=0; i < quizes.length || 0; i++) { %>
    <tr>
      <td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
      <% if (session.user) { %>
      <td><button type="button" class="botEdit" onclick="window.open('/quizes/<%=quizes[i].id %>/edit', '_self');">Editar</button></td>
      <td>
        <!-- Forma de eliminar un registro -->
        <form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
          <button type="submit" class="botElim" onclick="return confirm('¿Desea eliminar la pregunta: <%=quizes[i].pregunta %>?');">
            Eliminar
          </button>
        </form>
      </td>
      <% } %>
    </tr>
    <% } %>
    <% if (session.user) { %>
    <tfoot>
      <tr><td><button type="button" onclick="window.open('/quizes/new', '_self')">Nueva pregunta</button></td></tr>
    </tfoot>
    <% } %>
  </table>
</div>